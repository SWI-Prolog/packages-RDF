PACKAGE=RDF
include ../Makefile.defs

LIBPL=		rdf.pl rdf_parser.pl rdf_triple.pl rewrite.pl \
		rdf_ntriples.pl rdf_write.pl
XPCEPL=		rdf_diagram.pl

all:
		@echo "Nothing to do for this package"

install:	$(addprefix $(srcdir)/, $(LIBPL)) # xpce-install VSC needs to be fixed
		$(INSTALL_DATA) $(addprefix $(srcdir)/, $(LIBPL)) $(DESTDIR)$(PLLIBDIR)
		$(PL) -f none -g make -t halt

ln-install::
		@$(MAKE) INSTALL_DATA=../ln-install install

xpce-install:	$(addprefix $(srcdir)/, $(XPCEPL))
		if [ -d $(DESTDIR)$(XPCEBASE) ]; then \
		   $(INSTALL) -m 644 $(XPCEPL) $(DESTDIR)$(XPCEBASE)/prolog/lib; \
		fi

rpm-install:	install

pdf-install::
		-$(INSTALL_DATA) $(DOC).pdf $(DESTDIR)$(PKGDOC)

html-install::
		-$(INSTALL_DATA) $(DOC).html $(DESTDIR)$(PKGDOC)

uninstall:
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

check::
		(cd $(srcdir) && $(PL) -q -f test_rdf.pl -g true -t test_rdf )
		(cd $(srcdir) && $(PL) -q -f test_write.pl -g true -t test_write )

################################################################
# Documentation
################################################################

$(HTML):	$(TEX)
		latex2html $(DOC)
		mv html/index.html $@

$(PDF):		$(TEX)
		$(RUNTEX) --pdf $(DOC)

$(TEX):		$(DOCTOTEX)

.doc.tex:
		$(DOCTOTEX) $*.doc > $*.tex
.pl.tex:
		$(PLTOTEX) $*.pl > $*.tex

################################################################
# Clean
################################################################

clean:
		rm -f *~ *% config.log

distclean:	clean
		rm -f $(TARGETS) config.h config.cache config.status Makefile
		rm -f $(TEX)
		$(RUNTEX) --clean $(DOC)
